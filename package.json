{
  "name": "indicative-rules",
  "version": "1.0.0",
  "description": "Collection of validation rules for indicative",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build:docs": "del docs && ts-node bin/generateDocs.ts",
    "build": "npm run compile && npm run build:docs && git add docs",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/poppinss/indicative-rules.git"
  },
  "keywords": [
    "validation-rules",
    "validator",
    "indicative"
  ],
  "author": "virk,poppinss",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poppinss/indicative-rules/issues"
  },
  "homepage": "https://github.com/poppinss/indicative-rules#readme",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^2.0.3",
    "@types/node": "^12.0.7",
    "@types/validator": "^10.11.1",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^2.0.0",
    "doctoc": "^1.4.0",
    "fs-extra": "^8.0.1",
    "husky": "^2.4.0",
    "indicative-compiler": "^1.0.1",
    "indicative-parser": "^1.0.0",
    "japa": "^2.0.10",
    "klaw": "^3.0.0",
    "mrm": "^1.2.2",
    "np": "^5.0.3",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-external-module-name": "^2.1.0",
    "typescript": "^3.5.1"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "dependencies": {
    "@slynova/slug": "^1.1.2",
    "indicative-utils": "^7.0.0",
    "pluralize": "^8.0.0",
    "striptags": "^3.1.1",
    "validator": "^11.0.0"
  },
  "publishConfig": {
    "access": "public",
    "tag": "alpha"
  }
}
